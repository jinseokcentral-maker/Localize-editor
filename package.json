{
  "name": "localeeditor",
  "version": "0.0.0",
  "description": "Excel-like i18n translation editor with virtual scrolling",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./dist/index.css",
    "./dist/index.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "i18n",
    "translation",
    "editor",
    "excel",
    "grid",
    "virtual-scrolling",
    "internationalization"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:lib && pnpm build:types",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lib": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "CI=true pnpm exec playwright test --reporter=list --workers=12",
    "test:e2e:ui": "playwright test --ui",
    "check:outdated": "pnpm outdated",
    "test:e2e:failed": "CI=true pnpm exec playwright test --last-failed --reporter=list",
    "package": "pnpm build",
    "package:check": "pnpm test && pnpm build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.15",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.3.0",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.3.0"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "effect": "^3.19.13",
    "fuse.js": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.2.1"
  }
}
